@model Product






<div class="col-sm-12 col-md-4 my-3">
    <div class="card" style="width: 18rem;">
        <img src="https://cdn.dsmcdn.com/ty596/product/media/images/20221109/18/210958980/618235279/1/1_org_zoom.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Price.ToString("c")</p>
            <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductID">
                <i class="fa-solid fa-arrow-right"></i>
                Get Details</a>
        </div>
    </div>
</div>