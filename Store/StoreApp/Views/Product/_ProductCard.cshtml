@model Product



<div class="col-sm-12 col-md-4 my-3">
    <div class="card" style="width: 18rem;">
        <img src="@Model?.ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Price.ToString("c")</p>
            <div class="btn btn-group">
            <a class="btn btn-primary mx-1" asp-action="Get" asp-route-id="@Model.ProductID">
                <i class="fa-solid fa-arrow-right"></i>
                 Details</a>
            
            <form id="@Model.ProductID" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="ProductID">
            <input type="hidden" name="returnUrl" value="/Product/Get/@Model.ProductID">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fa fa-cart-plus"></i>
                </button>
            </form>

        </div>
        </div>
    </div>
</div>