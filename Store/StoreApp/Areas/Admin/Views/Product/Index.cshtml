@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Category</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <th>@product.ProductID</th>
                    <th>@product.ProductName</th>
                    <th>@product.Price.ToString("c")</th>
                    <th>@product.CategoryID</th>
                    <th>
                        <div class="btn-group">
                            <a class="btn btn-warning" target="_blank" asp-area="" asp-controller="Product"asp-action="Get" asp-route-id="@product.ProductID">
                                <i class="fa fa-edit"></i>
                                Web</a>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.ProductID">
                                <i class="fa fa-edit"></i>
                                Edit</a>
                             <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductID">
                                <i class="fa fa-trash"></i>
                                Delete</a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
